<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/create.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title>Update Product</title>
</head>
<body>
    <h1 class="text-primary">Create ToDo</h1>
    <div class="container d-flex  justify-content-center">
    <form class = "form" method="post">
        <div>
            <label for="product">Tên sản phẩm:</label><br>
            <input type="text" id="product" name="product"><br>
        </div>
        <div>
            <label for="price">giá tiền:</label><br>
            <input type="number" id="price" name="price">
        </div><br>
        <div >
            <label for="amount">số lượng:</label><br>
            <input type="number" id="amount" name="amount">
        </div><br>
        <div>
            <label for="category">loại sản phẩm</label><br>
            <select type="select" id="category" name="category">
                <%
                    category.forEach(category => {
                        %>
                        <option value= <%= category.id %> > <%= category.nameCategory %></option>
                        <%
                    })
                %>
            </select>
        </div>
        <br>
        <div class="d-flex justify-content-center">
            <input class="bg-success" type="submit">
        </div>
    </form>
    </div>
</body>
</html>